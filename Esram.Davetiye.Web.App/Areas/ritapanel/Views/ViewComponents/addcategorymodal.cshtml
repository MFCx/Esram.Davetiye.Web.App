@model Category
<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Kategori Düzenle</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <form asp-action="AddCategory" asp-controller="Category" asp-area="ritapanel" enctype="multipart/form-data" id="frmAddCategory" method="post" class="form p-5">
        <input type="hidden" asp-for="MasterCategoryId"/>
        <div class="form-group">
            <label>Kategori adı :</label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <hr />
        <div class="form-group">
            <div class="row">
                <div class="col-md-3"><img src="~/@Model.PicturePath" alt="Alternate Text" /></div>
                <div class="col-md-9">
                    <label>Görsel :</label>
                    <input type="file" name="PicturePath" asp-for="PicturePath" class="form-control" />
                </div>
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
    <button type="button" id="btnAdd" class="btn btn-primary">Kaydet</button>
</div>

<script>
    $('#btnAdd').click(function (e) {
        e.preventDefault();
        if (confirm("Kaydetmek istediğinize emin misiniz?")) {
            $('#frmAddCategory').submit();
        }
    })
</script>